<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@color/teal_700"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="194dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:text="Title"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/book_description"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:scrollbars="vertical"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque semper pulvinar enim gravida commodo. Pellentesque vel hendrerit elit. Fusce lectus tortor, sollicitudin ac faucibus sit amet, laoreet quis enim. Mauris viverra arcu felis, ut varius lectus varius a. Sed elit nisl, egestas et risus at, elementum faucibus magna. Curabitur ultricies tincidunt ante, id auctor ligula porta et. Morbi molestie ex vitae enim commodo pharetra. Morbi volutpat purus erat, eget lobortis tellus ornare ac. Vestibulum vel porta eros. "
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/book_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>